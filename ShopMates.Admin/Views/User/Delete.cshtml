@model ShopMates.ViewModels.System.Users.UserDeleteRequest

@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Delete User ID: [ @Html.DisplayFor(model => model.Id) ]</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a class="btn btn-primary" asp-controller="User" asp-action="ListUser">Back to List</a>
        </div>
        <h3>Are you sure you want to delete this?</h3>
        <div card-body col-lg-7>
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
            </dl>
    
            <form asp-action="Delete">
                <input asp-for="Id" type="hidden"/>
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>
